---
import Quote from "~/components/Quote/Quote.svelte";

import NormalLayout from "~/layouts/NormalLayout.astro";

import clsx from "clsx";
import socials from "~/data/socials.json";

const contacts: {
  link: string;
  service: string;
  alias?: string;
  description: string;
}[] = [
  {
    alias: "Internet Explorer 2.0",
    description: "私的領域",
    link: "https://scrapbox.io/sno2wman",
    service: "Scrapbox",
  },
  {
    description: "コミュニケーションツール(1)",
    link: "https://twitter.com/SnO2WMaN",
    service: "Twitter",
  },
  {
    description: "制作物(1)",
    link: "https://github.com/SnO2WMaN",
    service: "GitHub",
  },
  {
    description: "重要連絡",
    link: "mailto:me@sno2wman.net",
    service: "email",
  },
];
---

<NormalLayout>
  <h1
    class={clsx(
      ["text-3xl"],
      ["text-slate-700", "dark:text-slate-200"],
      ["font-bold"],
      ["mb-2"]
    )}
  >
    SnO2WMaN, sno2wman.net
  </h1>
  <Quote client:load />
  <div
    class={clsx(
      ["mt-4"],
      ["grid", ["grid-cols-1", "md:grid-cols-2"]],
      ["gap-x-8"],
      ["gap-y-8"]
    )}
  >
    <section id="aboutme" class={clsx(["col-span-full"])}>
      <h2
        class={clsx(
          ["text-2xl"],
          ["text-slate-800", "dark:text-slate-200"],
          ["font-bold"],
          ["mb-2"]
        )}
      >
        自己紹介
      </h2>
      <p class={clsx(["text-slate-800", "dark:text-slate-300"])}>
        私は正直者です。（ただし、この世界には常に真実を話す正直者と、常に嘘を話す狂人以外は存在しないとする。）
      </p>
    </section>
    <section id="contacts">
      <h2
        class={clsx(
          ["text-2xl"],
          ["text-slate-800", "dark:text-slate-200"],
          ["font-bold"],
          ["mb-2"]
        )}
      >
        連絡先
      </h2>
      <dl>
        {
          contacts.map((contact) => (
            <>
              <dt>
                <a
                  class={clsx(
                    ["text-normal"],
                    [
                      ["text-sky-600", "visited:text-violet-600"],
                      ["dark:text-sky-400", "dark:visited:text-violet-400"],
                    ],
                    ["underline"]
                  )}
                  href={contact.link}
                >
                  {contact.service}
                </a>
              </dt>
              <dd
                class={clsx(
                  ["pl-2"],
                  ["text-sm"],
                  ["text-slate-800", "dark:text-slate-400"]
                )}
              >
                {contact.description}
              </dd>
            </>
          ))
        }
      </dl>
    </section>
    <section id="socials">
      <h2
        class={clsx(
          ["text-2xl"],
          ["text-slate-800", "dark:text-slate-200"],
          ["font-bold"],
          ["mb-2"]
        )}
      >
        ソーシャル
      </h2>
      <p class={clsx(["text-sm"], ["text-slate-700", "dark:text-slate-400"])}>
        削除や追加は<a
          class={clsx(
            [
              ["text-sky-600", "visited:text-violet-600"],
              ["dark:text-sky-400", "dark:visited:text-violet-400"],
            ],
            ["underline"]
          )}
          href="https://github.com/SnO2WMaN/sno2wman.net/issues">ここ</a
        >や<a
          class={clsx(
            [
              ["text-sky-600", "visited:text-violet-600"],
              ["dark:text-sky-400", "dark:visited:text-violet-400"],
            ],
            ["underline"]
          )}
          href="#contacts">連絡先</a
        >に申請してください。
      </p>
      <dl>
        {
          socials.map((social) => (
            <>
              <dt class={clsx(["mt-1"])}>
                <span class={clsx(["text-slate-800", "dark:text-slate-300"])}>
                  {social.owner},
                </span>
                <a
                  class={clsx(
                    ["text-normal"],
                    [
                      ["text-sky-600", "visited:text-violet-600"],
                      ["dark:text-sky-400", "dark:visited:text-violet-400"],
                    ],
                    ["underline"]
                  )}
                  href={social.link}
                >
                  {social.name}
                </a>
              </dt>
              <dd
                class={clsx(
                  ["pl-2"],
                  ["text-sm"],
                  ["text-slate-700", "dark:text-slate-400"]
                )}
              >
                {social.description}
              </dd>
            </>
          ))
        }
      </dl>
    </section>
  </div>
</NormalLayout>
