---
const { id = null } = Astro.props;
---

<style lang="scss" is:inline>
  article {
    color: var(--main-text-color-main);
    border-block-start: 1px solid var(--main-splitline-color);
    padding: 24px 0;

    & > hgroup {
      border-left: 8px solid var(--main-highlight-color);
      padding: 8px 0 8px 12px;
      margin-bottom: 12px;
      & > h2 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--main-text-color-heading);
        letter-spacing: 2px;
        & > a[href^="#"] {
          color: inherit;
          text-decoration: none;
        }
      }
      & > p {
        font-size: 0.9rem;
        color: var(--main-text-color-heading);
        letter-spacing: 1px;
        & > a {
          color: inherit;
          text-decoration: none;
        }
      }
    }

    & > :last-child {
      margin-bottom: 0;
    }

    figure.theorem {
      padding: 8px 16px;
      border-inline-start: 1px solid var(--main-highlight-color);
      color: var(--main-text-color-main);
      & > figcaption {
        font-size: 0.9rem;
        font-weight: bold;
        text-decoration: solid underline;
        margin-bottom: 4px;
      }
    }
    ol {
      margin-top: 4px;
      list-style: decimal;
      padding-inline-start: 1rem;
      & > li {
        font-size: 0.9rem;
        &:not(:last-of-type) {
          margin-block-end: 0.25rem;
        }
        &::marker {
          color: var(--main-text-color-sub);
        }
      }
    }
    dl {
      margin: 8px 0;
      & > dt {
        font-size: 1rem;
        font-weight: 700;
        color: var(--main-text-color-heading);
        &:not(:first-of-type) {
          margin-top: 0.5rem;
        }
        & > a {
          margin-inline-start: 0.5rem;
          font-weight: 400;
          color: var(--main-highlight-color);
        }
      }
      & > dd {
        padding-inline-start: 0.75rem;
        font-size: 1rem;
      }
    }

    strong {
      font-weight: bold;
      text-decoration: solid underline;
    }

    a {
      color: var(--main-highlight-color);
      text-decoration: solid underline;
    }

    & > section {
      margin: 24px 0 0 16px;
      color: var(--main-text-color-main);
      & > h3 {
        border-left: 4px solid var(--main-highlight-color);
        padding: 4px 0 4px 8px;
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--main-text-color-heading);
        margin-bottom: 4px;
        letter-spacing: 1px;
      }
    }
  }
</style>

<article id={id}>
  <slot />
</article>
